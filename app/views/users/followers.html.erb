<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.description %><br>
      <%= @user.location %><br>
    </section>
    
    <%= render 'shared/follow' %>
    
  </aside>
  <div class="col-md-8">
    <% if @user.follower_users.any? %>
      <h3>Followers (<%= @user.follower_users.count %>)</h3>
      <ol class="follows">
        
      <% @user.follower_users.each do |follower| %>
      <li>
        <%= link_to gravatar_for(follower, size: 50), follower %>
        <span class="user"><%= link_to follower.name, follower %></span>
        <span class="description"><%= follower.description %></span>
        <span class="location"><%= follower.location %></span>
      </li>
      <% end %>
      
      </ol>
    <% end %>
  </div>
</div>
